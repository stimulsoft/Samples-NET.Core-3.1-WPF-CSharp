<Window x:Class="Edit_Report_in_the_Designer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Edit_Report_in_the_Designer"
        mc:Ignorable="d"
        Title="Edit Report in the Designer" Height="300" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Button Content="Create New Report" HorizontalAlignment="Left" Margin="147,56,0,0" Padding="10,5" VerticalAlignment="Top" Width="190" Click="ButtonNew_Click"/>
        <Button Content="Edit Report in the Designer V1" HorizontalAlignment="Left" Margin="147,99,0,0" Padding="10,5" VerticalAlignment="Top" Click="ButtonV1_Click" Width="190"/>
        <Button Content="Edit Report in the Designer V2" HorizontalAlignment="Left" Margin="147,132,0,0" Padding="10,5" VerticalAlignment="Top" Click="ButtonV2_Click" Width="190"/>
        <Button Content="Use the Designer Control" HorizontalAlignment="Left" Margin="147,175,0,0" Padding="10,5" VerticalAlignment="Top" Width="190" Click="ButtonControl_Click"/>
    </Grid>
</Window>
